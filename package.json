{
  "name": "@timheuer/vscode-ext-logger",
  "version": "0.0.0-placeholder",
  "description": "A library to make logging simpler for VS Code extension authors.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/timheuer/vscode-ext-logger"
  },
  "bugs": {
    "url": "https://github.com/timheuer/vscode-ext-logger/issues"
  },
  "scripts": {
    "setversion": "gulp setversion",
    "build": "gulp build",
    "build:full": "gulp build:full",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "lint": "eslint src test --ext .ts,.tsx",
    "lint:fix": "eslint src test --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "watch": "gulp watch",
    "prepublishOnly": "gulp clean && gulp build:full",
    "postpublish": "node scripts/postpublish.js",
    "update-changelog": "node scripts/update-changelog.js",
    "update-changelog-only": "node scripts/update-changelog-only.js",
    "tag-release": "nbgv tag && git push origin --tags",
    "publish-with-tag": "npm run update-changelog && npm run tag-release",
    "publish-and-tag-gulp": "gulp publish-and-tag",
    "release-all": "node scripts/release.js",
    "release": "nbgv prepare-release && git push origin main --follow-tags"
  },
  "keywords": [
    "logging",
    "VS Code",
    "extension",
    "logger",
    "vscode-extension"
  ],
  "author": "Tim Heuer",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/gulp": "^4.0.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "gulp": "^5.0.1",
    "jest": "^29.7.0",
    "nerdbank-gitversioning": "^3.8.38-alpha",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "vscode": "^1.85.0"
  },
  "peerDependenciesMeta": {
    "vscode": {
      "optional": true
    }
  }
}
